<div class="max-w-2xl mx-auto my-16 px-4">
    <div class="text-center mb-10">
        <h1 class="text-4xl font-bold text-cyan-900">We Value Your Voice</h1>
        <p class="text-slate-500 mt-2">Tell us about your recovery journey.</p>
    </div>

    <div class="bg-white p-8 rounded-xl shadow-lg border border-slate-100">
        <form action="/feedback" method="POST" class="space-y-6">
            <div>
                <label class="block font-bold text-slate-700 mb-2">Your Name</label>
                <input type="text" name="name" 
                       value="<%= locals.user ? user.name : '' %>" 
                       class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-cyan-500 outline-none" required>
            </div>
            
            <div>
                <label class="block font-bold text-slate-700 mb-2">Rating</label>
                <div class="flex space-x-4">
                    <% [1, 2, 3, 4, 5].forEach(num => { %>
                        <label class="cursor-pointer">
                            <input type="radio" name="rating" value="<%= num %>" class="hidden peer" required>
                            <span class="w-10 h-10 flex items-center justify-center rounded-full border bg-slate-50 hover:bg-cyan-100 peer-checked:bg-cyan-600 peer-checked:text-white font-bold transition select-none">
                                <%= num %>
                            </span>
                        </label>
                    <% }) %>
                </div>
            </div>

            <div>
                <label class="block font-bold text-slate-700 mb-2">Your Experience</label>
                <textarea name="message" rows="4" class="w-full p-3 border rounded-lg focus:ring-2 focus:ring-cyan-500 outline-none" placeholder="How did you feel after the session?" required></textarea>
            </div>

            <button class="w-full bg-slate-900 text-white py-3 rounded-lg font-bold hover:bg-slate-800 transition">Submit Feedback</button>
        </form>
    </div>
</div>