<div class="flex items-center justify-center min-h-[70vh] bg-slate-50">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-6 text-center text-cyan-900">Create Account</h2>
        <% if(locals.error) { %> <div class="bg-red-100 text-red-700 p-2 mb-4 rounded text-center"><%= error %></div> <% } %>
        
        <form action="/user/register" method="POST" class="space-y-4">
            <input type="text" name="name" placeholder="Full Name" class="w-full border p-3 rounded" required>
            <input type="email" name="email" placeholder="Email Address" class="w-full border p-3 rounded" required>
            <input type="password" name="password" placeholder="Create Password" class="w-full border p-3 rounded" required>
            <button class="w-full bg-slate-800 text-white py-3 rounded font-bold hover:bg-slate-900">Register</button>
        </form>
    </div>
</div>