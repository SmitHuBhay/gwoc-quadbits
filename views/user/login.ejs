<div class="flex items-center justify-center min-h-[70vh] bg-slate-50">
    <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-6 text-center text-cyan-900">Customer Login</h2>
        <% if(locals.error) { %> <div class="bg-red-100 text-red-700 p-2 mb-4 rounded text-center"><%= error %></div> <% } %>
        
        <form action="/user/login" method="POST" class="space-y-4">
            <input type="email" name="email" placeholder="Email Address" class="w-full border p-3 rounded" required>
            <input type="password" name="password" placeholder="Password" class="w-full border p-3 rounded" required>
            <button class="w-full bg-cyan-700 text-white py-3 rounded font-bold hover:bg-cyan-800">Login</button>
        </form>
        <p class="mt-4 text-center text-sm">Don't have an account? <a href="/user/register" class="text-cyan-600 font-bold">Sign up</a></p>
    </div>
</div>