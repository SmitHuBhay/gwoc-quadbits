<div class="max-w-6xl mx-auto py-12 px-4">
    <div class="flex justify-between items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-slate-900">My Wellness Dashboard</h1>
            <p class="text-slate-500">Welcome back, <%= user.name %></p>
        </div>
        <a href="/book" class="bg-cyan-600 text-white px-6 py-2 rounded shadow hover:bg-cyan-700">New Booking</a>
    </div>

    <div class="bg-white rounded-xl shadow overflow-hidden border border-slate-200">
        <div class="px-6 py-4 border-b border-slate-100 bg-slate-50 font-bold text-slate-700">Booking History</div>
        
        <% if (bookings.length === 0) { %>
            <div class="p-8 text-center text-slate-500">You haven't booked any sessions yet.</div>
        <% } else { %>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead class="bg-slate-50 text-xs uppercase text-slate-500">
                        <tr>
                            <th class="px-6 py-3">Service</th>
                            <th class="px-6 py-3">Date</th>
                            <th class="px-6 py-3">Time</th>
                            <th class="px-6 py-3">Status</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-slate-100">
                        <% bookings.forEach(b => { %>
                        <tr class="hover:bg-slate-50">
                            <td class="px-6 py-4 font-bold"><%= b.service ? b.service.title : 'Service Removed' %></td>
                            <td class="px-6 py-4"><%= new Date(b.date).toLocaleDateString() %></td>
                            <td class="px-6 py-4"><%= b.timeSlot %></td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded-full text-xs font-bold 
                                    <%= b.status === 'Confirmed' ? 'bg-green-100 text-green-800' : 
                                       b.status === 'Cancelled' ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800' %>">
                                    <%= b.status %>
                                </span>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>