<div class="bg-slate-50 py-16 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-slate-900 mb-4">Our Therapies</h1>
            <p class="text-slate-500 max-w-2xl mx-auto">Choose from our selection of premium recovery protocols designed to optimize your physiology.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
            <% services.forEach(service => { %>
                <div class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition duration-300 relative group">
                    
                    <% if(service.discountPercent > 0) { %>
                        <div class="absolute top-4 right-4 bg-red-600 text-white text-xs font-bold px-3 py-1 rounded-full z-10">
                            SAVE <%= service.discountPercent %>%
                        </div>
                    <% } %>

                    <div class="h-64 overflow-hidden">
                        <img src="<%= service.imageURL %>" class="w-full h-full object-cover group-hover:scale-105 transition duration-500">
                    </div>
                    
                    <div class="p-8">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <h2 class="text-2xl font-bold text-slate-900"><%= service.title %></h2>
                                <p class="text-cyan-600 text-sm font-bold mt-1"><%= service.category %></p>
                            </div>
                        </div>

                        <div class="flex justify-between items-center mt-6 pt-6 border-t border-slate-100">
                            <div>
                                <% if(service.discountPercent > 0) { %>
                                    <div class="flex items-center gap-2">
                                        <span class="text-2xl font-bold text-red-600">$<%= service.discountPrice %></span>
                                        <span class="text-sm text-slate-400 line-through">$<%= service.price %></span>
                                    </div>
                                <% } else { %>
                                    <span class="text-2xl font-bold text-slate-900">$<%= service.price %></span>
                                <% } %>
                                <span class="text-sm text-slate-500 block"><%= service.duration %> session</span>
                            </div>
                            <a href="/book?service=<%= service._id %>" class="bg-cyan-700 text-white px-6 py-3 rounded-lg font-bold hover:bg-cyan-800 transition">Book Now</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>