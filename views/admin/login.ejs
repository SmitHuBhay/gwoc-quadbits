<div class="flex items-center justify-center min-h-[70vh] bg-slate-100">
    <div class="w-full max-w-sm bg-white p-8 rounded-lg shadow-xl border border-slate-200">
        <h2 class="text-2xl font-bold mb-6 text-center text-slate-800">Admin Portal</h2>
        
        <% if(error) { %> 
            <div class="bg-red-100 text-red-700 p-2 mb-4 rounded text-center text-sm font-bold">
                <%= error %>
            </div> 
        <% } %>

        <form action="/admin/login" method="POST" class="space-y-5">
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-1">Username</label>
                <input type="text" name="username" class="w-full border p-3 rounded focus:ring-2 focus:ring-slate-500 outline-none" required>
            </div>
            
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-1">Password</label>
                <input type="password" name="password" class="w-full border p-3 rounded focus:ring-2 focus:ring-slate-500 outline-none" required>
            </div>

            <button class="w-full bg-slate-800 text-white py-3 rounded font-bold hover:bg-slate-900 transition shadow-lg">
                Access Dashboard
            </button>
        </form>
        
        <div class="mt-6 text-center">
            <a href="/" class="text-sm text-slate-500 hover:text-slate-800">&larr; Back to Website</a>
        </div>
    </div>
</div>