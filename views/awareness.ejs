<div class="bg-white py-16 px-4">
    <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16">
            <h2 class="text-base font-bold text-cyan-600 tracking-wide uppercase">Knowledge Base</h2>
            <h1 class="mt-2 text-4xl font-extrabold text-slate-900">The Science of Recovery</h1>
            <p class="mt-4 text-xl text-slate-500">Exploring the physiology of cold exposure and resilience.</p>
        </div>

        <div class="grid gap-8 lg:grid-cols-3 md:grid-cols-2">
            <% if(posts.length === 0) { %>
                <div class="col-span-3 text-center py-12 bg-slate-50 rounded-lg">
                    <p class="text-slate-500">No articles published yet.</p>
                </div>
            <% } %>

            <% posts.forEach(post => { %>
                <div class="flex flex-col rounded-lg shadow-lg overflow-hidden border border-slate-100 hover:shadow-2xl transition duration-300 bg-white">
                    <div class="flex-shrink-0 h-48 bg-slate-200">
                        <img class="h-full w-full object-cover" src="<%= post.imageURL || 'https://images.unsplash.com/photo-1544367563-12123d8965cd?auto=format&fit=crop&w=800&q=80' %>" alt="">
                    </div>
                    <div class="flex-1 p-6 flex flex-col justify-between">
                        <div class="flex-1">
                            <div class="flex flex-wrap gap-2 mb-3">
                                <% post.tags.forEach(tag => { %>
                                    <span class="px-2 py-1 text-xs font-bold text-cyan-800 bg-cyan-100 rounded-full"><%= tag %></span>
                                <% }) %>
                            </div>
                            <h3 class="text-xl font-bold text-slate-900 mb-2"><%= post.title %></h3>
                            <p class="text-base text-slate-500 line-clamp-3"><%= post.body %></p>
                        </div>
                        <div class="mt-6 text-sm text-slate-400">
                            <%= post.createdAt.toLocaleDateString() %>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>